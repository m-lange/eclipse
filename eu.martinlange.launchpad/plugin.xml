<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.xml"
            file-extensions="launch"
            id="eu.martinlange.launchConfiguration"
            name="Launch Configuration"
            priority="high">
         <describer
               class="org.eclipse.core.runtime.content.XMLRootElementContentDescriber2">
            <parameter
                  name="element"
                  value="launchConfiguration">
            </parameter>
         </describer>
      </content-type>
   </extension>
   <extension
         point="org.eclipse.ui.decorators">
      <decorator
            adaptable="true"
            class="eu.martinlange.launchpad.decorators.LaunchConfigurationDecorator"
            icon="icons/full/obj16/launch_file.gif"
            id="eu.martinlange.decorator.launchConfiguration"
            label="Launch Configuration"
            lightweight="false"
            location="REPLACE"
            state="true">
         <enablement>
            <objectClass
                  name="org.eclipse.core.resources.IFile">
            </objectClass>
         </enablement>
      </decorator>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="eu.martinlange.launchpad.commands.LaunchCommandHandler"
            id="eu.martinlange.launchpad.command.launch"
            name="Launch">
         <commandParameter
               id="eu.martinlange.launchpad.command.launch.mode"
               name="Launch Mode"
               optional="false">
         </commandParameter>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            class="eu.martinlange.launchpad.commands.LaunchExtensionContributionFactory"
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer?after=group.open">
      </menuContribution>
      <menuContribution
            allPopups="false"
            class="eu.martinlange.launchpad.commands.LaunchExtensionContributionFactory"
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu?after=group.open">
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.eclipse.core.resources.IFile"
            class="eu.martinlange.launchpad.internal.LaunchConfigurationAdapterFactory">
         <adapter
               type="org.eclipse.debug.core.ILaunchConfiguration">
         </adapter>
      </factory>
      <factory
            adaptableType="org.eclipse.core.runtime.IPath"
            class="eu.martinlange.launchpad.internal.LaunchConfigurationAdapterFactory">
         <adapter
               type="org.eclipse.debug.core.ILaunchConfiguration">
         </adapter>
      </factory>
      <factory
            adaptableType="org.eclipse.jface.viewers.ISelection"
            class="eu.martinlange.launchpad.internal.LaunchConfigurationAdapterFactory">
         <adapter
               type="org.eclipse.debug.core.ILaunchConfiguration">
         </adapter>
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            default="true"
            extensions="launch"
            icon="icons/full/obj16/launch_file.gif"
            id="eu.martinlange.editor.launchConfiguration"
            launcher="eu.martinlange.launchpad.internal.LaunchConfigurationEditor"
            name="Launch Configuration Editor">
         <contentTypeBinding
               contentTypeId="eu.martinlange.launchConfiguration">
         </contentTypeBinding>
      </editor>
   </extension>

</plugin>
