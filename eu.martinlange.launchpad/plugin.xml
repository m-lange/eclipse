<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.xml"
            file-extensions="launch"
            id="eu.martinlange.launchConfiguration"
            name="Launch Configuration"
            priority="high">
         <describer
               class="org.eclipse.core.runtime.content.XMLRootElementContentDescriber2">
            <parameter
                  name="element"
                  value="launchConfiguration">
            </parameter>
         </describer>
      </content-type>
   </extension>
   <extension
         point="org.eclipse.ui.decorators">
      <decorator
            adaptable="true"
            class="eu.martinlange.launchpad.decorators.ConfigurationDecorator"
            icon="icons/full/obj16/configuration.gif"
            id="eu.martinlange.decorator.launchConfiguration"
            label="Launch Configuration"
            lightweight="false"
            location="REPLACE"
            state="true">
         <enablement>
            <objectClass
                  name="org.eclipse.core.resources.IFile">
            </objectClass>
         </enablement>
      </decorator>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            default="true"
            extensions="launch"
            icon="icons/full/obj16/configuration.gif"
            id="eu.martinlange.editor.launchConfiguration"
            launcher="eu.martinlange.launchpad.internal.ConfigurationEditor"
            name="Launch Configuration Editor">
         <contentTypeBinding
               contentTypeId="eu.martinlange.launchConfiguration">
         </contentTypeBinding>
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="eu.martinlange.launchpad.command.run"
            name="run">
      </command>
      <command
            id="eu.martinlange.launchpad.command.debug"
            name="debug">
      </command>
      <command
            id="eu.martinlange.launchpad.command.profile"
            name="profile">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer?after=group.open">
         <command
               commandId="eu.martinlange.launchpad.command.run"
               disabledIcon="icons/full/dtool16/run.gif"
               icon="icons/full/etool16/run.gif"
               label="Run"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <test
                        forcePluginActivation="true"
                        property="eu.martinlange.launchpad.supportsMode"
                        value="run">
                  </test>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="eu.martinlange.launchpad.command.debug"
               disabledIcon="icons/full/dtool16/debug.gif"
               icon="icons/full/etool16/debug.gif"
               label="Debug"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <test
                        forcePluginActivation="true"
                        property="eu.martinlange.launchpad.supportsMode"
                        value="debug">
                  </test>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="eu.martinlange.launchpad.command.profile"
               disabledIcon="icons/full/etool16/profile.gif"
               icon="icons/full/etool16/profile.gif"
               label="Profile"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <test
                        forcePluginActivation="true"
                        property="eu.martinlange.launchpad.supportsMode"
                        value="profile">
                  </test>
               </with>
            </visibleWhen>
         </command>
         <separator
               name="separator1"
               visible="true">
         </separator>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.navigator.ProjectExplorer#PopupMenu?after=group.open">
         <command
               commandId="eu.martinlange.launchpad.command.run"
               disabledIcon="icons/full/dtool16/run.gif"
               icon="icons/full/etool16/run.gif"
               label="Run"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <test
                        forcePluginActivation="true"
                        property="eu.martinlange.launchpad.supportsMode"
                        value="run">
                  </test>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="eu.martinlange.launchpad.command.debug"
               disabledIcon="icons/full/dtool16/debug.gif"
               icon="icons/full/etool16/debug.gif"
               label="Debug"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <test
                        forcePluginActivation="true"
                        property="eu.martinlange.launchpad.supportsMode"
                        value="debug">
                  </test>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="eu.martinlange.launchpad.command.profile"
               disabledIcon="icons/full/etool16/profile.gif"
               icon="icons/full/etool16/profile.gif"
               label="Profile"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <test
                        forcePluginActivation="true"
                        property="eu.martinlange.launchpad.supportsMode"
                        value="profile">
                  </test>
               </with>
            </visibleWhen>
         </command>
         <separator
               name="separator1"
               visible="true">
         </separator>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="eu.martinlange.launchpad.command.run">
         <class
               class="eu.martinlange.launchpad.commands.LaunchHandler">
            <parameter
                  name="mode"
                  value="run">
            </parameter>
         </class>
         <enabledWhen>
            <with
                  variable="selection">
               <test
                     forcePluginActivation="true"
                     property="eu.martinlange.launchpad.supportsMode"
                     value="run">
               </test>
            </with>
         </enabledWhen>
      </handler>
      <handler
            commandId="eu.martinlange.launchpad.command.debug">
         <class
               class="eu.martinlange.launchpad.commands.LaunchHandler">
            <parameter
                  name="mode"
                  value="debug">
            </parameter>
         </class>
         <enabledWhen>
            <with
                  variable="selection">
               <test
                     forcePluginActivation="true"
                     property="eu.martinlange.launchpad.supportsMode"
                     value="debug">
               </test>
            </with>
         </enabledWhen>
      </handler>
      <handler
            commandId="eu.martinlange.launchpad.command.profile">
         <class
               class="eu.martinlange.launchpad.commands.LaunchHandler">
            <parameter
                  name="mode"
                  value="profile">
            </parameter>
         </class>
         <enabledWhen>
            <with
                  variable="selection">
               <test
                     forcePluginActivation="true"
                     property="eu.martinlange.launchpad.supportsMode"
                     value="profile">
               </test>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="eu.martinlange.launchpad.internal.LaunchpadPropertyTester"
            id="eu.martinlange.launchpad.propertyTester"
            namespace="eu.martinlange.launchpad"
            properties="supportsMode"
            type="java.lang.Object">
      </propertyTester>
   </extension>

</plugin>
